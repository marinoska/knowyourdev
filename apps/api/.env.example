# apps/api/.env.example
# This file mirrors apps/api/.env keys and comments. Copy to .env and fill real values.
# Localhost mapping required for the local domain used across the project:
# Add to your hosts file (e.g., /etc/hosts on macOS/Linux):
# 127.0.0.1    knowyourdev.local

NODE_ENV=development
PORT=5050
SCHEME=http
LOGGER_FILE=./dev.log
LOGGER_LEVEL=debug
ALLOWED_ORIGIN=http://localhost:5173

OPENAI_API_KEY=your-openai-mock-key
OPENAI_MODEL=gpt-4o
LANGCHAIN_TRACING_V2="true"
LANGCHAIN_API_KEY=your-langsmith-api-key
LANGCHAIN_PROJECT="CV Scoring"
LANGCHAIN_CALLBACKS_BACKGROUND=true

MONGO_CONNECTION=mongodb+srv://your-user:your-password@cluster0.b8zf7ks.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0

CURRENT_USAGE_FIELD_NAME=usage2024

# this is just an ID in general sense - so it'd regardless of the real url
AUTH0_API_AUDIENCE=https://knowyourdev.local:5050
# find that in Auth0 dashboard:
AUTH0_API_ISSUER=https://your-tenant.eu.auth0.com/

CLOUDFLARE_BUCKET=dev
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
CLOUDFLARE_ACCESS_KEY_ID=your-cloudflare-access-key-id
CLOUDFLARE_SECRET_ACCESS_KEY=your-cloudflare-secret
CLOUDFLARE_TOKEN=your-cloudflare-token

HF_TOKEN=your-huggingface-token
