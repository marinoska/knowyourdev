{
  "compilerOptions": {
    "target": "es6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "jest"
    ],
    //    "plugins": [
    //      {
    //        "transform": "typescript-transform-paths"
    //      },
    //      {
    //        "transform": "typescript-transform-paths",
    //        "afterDeclarations": true
    //      }
    //    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "process.env.d.ts",
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}