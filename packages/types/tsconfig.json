{
  "compilerOptions": {
    "outDir": "dist",
    "skipLibCheck": true,
    "rootDir": "src",
    "allowImportingTsExtensions": true,
    // Enable explicit .ts extensions
    "emitDeclarationOnly": true,
    // Emit only declaration files
    "declaration": true,
    "declarationMap": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
