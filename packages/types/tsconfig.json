{
  "extends": "@kyd/typescript-config/base.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    // Enable explicit .ts extensions
    "emitDeclarationOnly": true,
    // Emit only declaration files
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "."
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
